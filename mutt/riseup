set from=crossroads1112@riseup.net
set hostname="riseup.net"
# Connection options
set ssl_force_tls = yes
unset ssl_starttls

## Hook -- IMPORTANT!
account-hook $folder "set imap_user=crossroads1112@riseup.net imap_pass="$my_pw_riseup"
